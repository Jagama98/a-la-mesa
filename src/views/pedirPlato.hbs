{{#each text}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Introduzca los datos del pedido</h3>
    </div>
    <div class="card-body">
      <form action="/pedidos/pedirPlato" method="POST">
        <div class="form-group">
          <select class="custom-select" name="restaurante">
            <option value="" selected>Restaurante...</option>
            <option value="Agora">Agora</option>
            <option value="Machín">Machín</option>
            <option value="Canarias">Canarias</option>
          </select>
        </div>
        <div class="form-group">
          <select name="plato" class="custom-select" data-live-search="true">
            <option value="" selected>Plato...</option>
          <optgroup label="Agora">
            <option value="Patatas Bravas">Patatas Bravas</option>
            <option value="Burguer Corcega">Burguer Corcega</option>
            <option value="Burrito Carrillada">Burrito Carrillada</option>
          </optgroup>
          <optgroup label="Machín">
            <option value="Ensaladilla">Ensaladilla</option>
            <option value="Solomillo Jerez">Solomillo Jerez</option>
            <option value="Serranito Pollo">Serranito Pollo</option>
          </optgroup>
          <optgroup label="Canarias">
            <option value="Chipirón Plancha">Chipirón Plancha</option>
            <option value="Lagrimitas Pollo">Lagrimitas Pollo</option>
            <option value="Presa Ibérica">Presa Ibérica</option>
          </optgroup>
          </select>
          <!--<input type="text" name="plato" class="form-control" placeholder="Plato" autofocus/>-->
        </div>
        <div class="form-group">
          <input name="cantidad" class="form-control" placeholder="Cantidad"></input>
        </div>
        <div class="form-group">
          <input type="text" name="direccion" class="form-control" placeholder="Dirección del domicilio"></input>
        </div>
        <div class="form-group">
          <input name="telefono" class="form-control" placeholder="Nº Teléfono"></input>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
